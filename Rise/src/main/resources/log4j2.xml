<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <!-- Appenders define where logs go -->
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%t] %c{1} - %m%n"/>
        </Console>

        <!-- Rolling file appender -->
        <RollingFile name="FileLogger"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%t] %c{1} - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll file when it exceeds 10 MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
                <!-- Also roll daily -->
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <!-- Loggers define categories -->
    <Loggers>
        <!-- Application logs -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

        <!-- Selenium-specific logs (make them less noisy) -->
        <Logger name="org.openqa.selenium" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>

</Configuration>
